{
    "manifest_version": 1,
    "type": "WebApp",
    "meta": {
        "name": "LoLCooldown",
        "version": "0.1.1",
        "minimum-overwolf-version": "0.120.0",
        "author": "Yasser Kaddoura",
        "icon": "img/hourglass.png",
        "icon_gray": "img/hourglass-gray.png",
        "launcher_icon": "img/hourglass.ico",
        "description": "Maximize your gameplay by knowing the cooldowns of summoner spells & champion abilities."
    },
    "permissions": [
        "Hotkeys",
        "GameInfo",
        "FileSystem",
        "Extensions",
        "Streaming",
        "Profile",
        "DesktopStreaming"
    ],
    "data": {
        "game_targeting": {
            "type": "dedicated",
            "game_ids": [5426]
        },
        "launch_events": [
            {
                "event": "GameLaunch",
                "event_data": {
                    "game_ids": [5426, 10902]
                },
                "start_minimized": true
            }
        ],
        "hotkeys": {
            "showhide": {
                "title": "Show/Hide Overlay",
                "action-type": "toggle",
                "default": "Ctrl+C"
            }
        },
        "game_events": [5426, 10902],
        "start_window": "background",
        "windows": {
            "background": {
                "file": "windows/background/background.html",
                "is_background_page": true
            },
            "main": {
                "file": "windows/main/main.html",
                "native_window": true,
                "transparent": true,
                "block_top_window_navigation": true,
                "popup_blocker": true,
                "mute": true,
                "size": {
                    "width": 500,
                    "height": 600
                },
                "min_size": {
                    "width": 0,
                    "height": 0
                },
                "max_size": {
                    "width": 2000,
                    "height": 2000
                }
            },
            "settings": {
                "file": "windows/settings/settings.html",
                "transparent": true,
                "size": {
                    "width": 400,
                    "height": 400
                },
                "min_size": {
                    "width": 0,
                    "height": 0
                },
                "max_size": {
                    "width": 1000,
                    "height": 1000
                }
            },
            "feedback": {
                "file": "windows/feedback/feedback.html",
                "transparent": true,
                "size": {
                    "width": 600,
                    "height": 470
                },
                "min_size": {
                    "width": 0,
                    "height": 0
                },
                "max_size": {
                    "width": 1000,
                    "height": 1000
                }
            },
            "app": {
                "file": "windows/app/app.html",
                "transparent": true,
                "block_top_window_navigation": true,
                "popup_blocker": true,
                "mute": true,
                "size": {
                    "width": 1150,
                    "height": 800
                },
                "min_size": {
                    "width": 0,
                    "height": 0
                },
                "max_size": {
                    "width": 1150,
                    "height": 800
                }
            }
        },
        "protocol_override_domains": { "googlesyndication": "http" },
        "externally_connectable": {
            "matches": [
                "https://*.lolcooldown.com",
                "https://*.google-analytics.com",
                "http://www.google-analytics.com",
                "https://www.googleapis.com"
            ]
        },
        "force_browser": "user",
        "developer": {
            "enable_auto_refresh": true,
            "reload_delay": 1000,
            "filter": "*.*"
        }
    }
}
