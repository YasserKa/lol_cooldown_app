{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "LoLCoodl",
    "version": "0.1.0",
    "minimum-overwolf-version": "0.120.0",
    "author": "Yasser Kaddoura",
    "icon": "IconMouseOver.png",
    "icon_gray": "IconMouseNormal.png",
    "launcher_icon": "desktop-icon.ico",
    "window_icon": "TaskbarIcon.png",
    "description": "App showcasing the cooldowns in a League of Legends game"
  },
  "permissions": [
    "Hotkeys",
    "Extensions",
    "Streaming",
    "Profile",
    "GameInfo",
    "DesktopStreaming",
    "FileSystem"
  ],
  "data": {
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [5426]
    },
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [5426, 10902]
        },
        "start_minimized": true
      }
    ],
    "hotkeys": {
      "sample_app_showhide": {
        "title": "Show/Hide In-Game Window",
        "action-type": "toggle",
        "default": "Ctrl+F"
      }
    },
    "game_events": [5426, 10902],
    "start_window": "background",
    "windows": {
      "background": {
        "file": "windows/background/background.html",
        "background_optimization": false,
        "is_background_page": true
      },
      "main": {
        "file": "windows/main/main.html",
        "native_window": true,
        "transparent": true,
        "resizable": true,
        "size": {
          "width": 400,
          "height": 600 
        },
        "min_size": {
          "width": 400,
          "height":600 
        },
        "max_size": {
          "width": 400,
          "height": 600
        },
        "desktop_only": true
      },
      "app": {
        "file": "windows/app/app.html",
        "transparent": true,
        "resizable": true,
        "size": {
          "width": 1212,
          "height": 699
        },
        "min_size": {
          "width": 1212,
          "height": 699
        },
        "max_size": {
          "width": 1212,
          "height": 699
        }
      }
    },
    "protocol_override_domains": { "googlesyndication": "http" },
    "block_top_window_navigation": true,
    "popup_blocker": true,
    "mute": true,
    "externally_connectable": {
      "matches": [
        "https://*.lolcooldown.com",
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "https://overwolf.github.io",
        "https://*.google-analytics.com",
        "http://*.google-analytics.com",
        "https://www.googleapis.com"
      ]
    },
    "force_browser": "user",
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
